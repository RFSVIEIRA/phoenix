
<layout width="1920" height="1080" font="fonts/verdana.ttf" fontColor="FFFFFF" loadFontSize="60">

	<image src="images/bkg/Contra (USA).jpg" random="true" randomsrc="images/bkg/" slideShow="true" slideNumber="2" slideShowTimer="5000" x="center" y="center" xOrigin="center" yOrigin="center" width="1920" height="1080" scaleMode="fit" layer="0"/>
		
	<image src="images/book/Contra (USA) pg1.jpg" random="true" randomsrc="images/book/" slideShow="true" slideNumber="2" slideShowTimer="11000" x="left" y="center" xOrigin="left" yOrigin="center" width="800" height="1080" scaleMode="fit" layer="5"/>
		
    <reloadableImage type="logo" x="center" xOffset="200" y="100" width="400" height="200" xOrigin="center" yOrigin="center" layer="5" alpha="0" scaleMode="fit">
        <onEnter><set duration=".1"><animate type="alpha" to="1"/></set></onEnter>
        <onExit><set duration=".1"><animate type="alpha" to="0"/></set></onExit>
    </reloadableImage>
	
	<reloadableImage type="medium_front" alpha="0" x="right" xOffset="-50" y="bottom" yOffset="-20" xOrigin="right" yOrigin="bottom" width="322" maxHeight="322" layer="6">
	<onEnter menuIndex="1">
		<set duration=".0001">
			<animate type="alpha" to="0"/>
			<animate type="xOrigin" to="left"/>
			<animate type="x" to="right"/>
		</set>
	</onEnter>
	<onMenuIdle>
		<set duration=".0001">
			<animate type="nop"/>
		</set>
		<set duration="1">
			<animate type="nop"/>
		</set>
		<set duration=".0001">
			<animate type="alpha" to="1"/>
		</set>
		<set duration=".4">
			<animate type="xOrigin" to="right"/>
			<animate type="x" to="right"/>
			<animate type="xOffset" to="-240"/>
		</set>
	</onMenuIdle>
</reloadableImage>
	
