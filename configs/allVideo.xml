<layout>
<variables>
<videoBezelCostumizeShow>true</videoBezelCostumizeShow>
</variables>
<!-- Main MENU VIDEO -->
<reloadableVideo active="$showSystemVideo" imageType="video" alpha="0" volume="0" x="center" y="center" xOrigin="center" yOrigin="center" width="1920" maxHeight="1080" layer="4">
	<onMenuEnter menuIndex="0">
		<set duration=".0001">
			<animate type="volume" to="0"/>
			<animate type="alpha" to="0"/>
		</set>
	</onMenuEnter>
	<onMenuEnter menuIndex="1">
		<set duration=".0001">
			<animate type="volume" to="$systemVideoVolume"/>
			<animate type="alpha" to="0"/>
		</set>
	</onMenuEnter>
	<onMenuEnter menuIndex="2">
		<set duration=".0001">
			<animate type="alpha" to="0"/>
			<animate type="volume" to="$gameVideoVolume"/>
		</set>
	</onMenuEnter>
	<onPlaylistEnter menuIndex="1">
		<set duration=".0001">
			<animate type="alpha" to="0"/>
		</set>
	</onPlaylistEnter>
	<onPlaylistExit menuIndex="1">
		<set duration=".0001">
			<animate type="alpha" to="0"/>
		</set>
	</onPlaylistExit>
	<onMenuJumpEnter menuIndex="1">
		<set duration=".0001">
			<animate type="alpha" to="0"/>
		</set>
	</onMenuJumpEnter>
	<onMenuJumpExit menuIndex="1">
		<set duration=".0001">
			<animate type="alpha" to="0"/>
		</set>
	</onMenuJumpExit>
	<onMenuScroll menuIndex="1">
		<set duration=".1">
			<animate type="alpha" to="0"/>
		</set>
	</onMenuScroll>
	<onMenuIdle menuIndex="1">
		<set duration="1">
			<animate type="nop"/>
		</set>
		<set duration=".0001">
			<animate type="alpha" to="1"/>
		</set>
	</onMenuIdle>
</reloadableVideo>


