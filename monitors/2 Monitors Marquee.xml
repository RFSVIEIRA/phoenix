<?xml version="1.0" encoding="UTF-8"?>
<!-- PHOENIX by RFSVIEIRA -->
<layout width="1920" height="1080">

	<menu monitor="1" menuIndex="1" type="custom" imageType="fanart" alpha="0" scrollTime=".16" scrollAcceleration=".05" orientation="horizontal">
		<itemDefaults x="center" y="center" xOrigin="center" yOrigin="center" height="1080" width="1920" alpha="1" layer="0"/>

		<item xOffset="-192" alpha="0"/>

		<item selected="true" alpha="1">
		<onMenuEnter	menuIndex="1"><set duration=".0001"><animate type="alpha" to="1"/></set></onMenuEnter>
		<onMenuEnter	menuIndex="2"><set duration=".0001"><animate type="alpha" to="1"/></set></onMenuEnter>
		</item>

		<item xOffset="192" alpha="0"/>
	</menu>
	<menu monitor="1" menuIndex="1" type="custom" imageType="logo" alpha="0" scrollTime=".16" scrollAcceleration=".05" orientation="horizontal">
		<itemDefaults x="center" y="center" xOrigin="center" yOrigin="center" height="648" maxWidth="1152" alpha="0" layer="4"/>

		<item xOffset="-192" alpha="0"/>

		<item selected="true" alpha="1">
		<onMenuEnter	menuIndex="1"><set duration=".0001"><animate type="alpha" to="1"/></set></onMenuEnter>
		<onMenuEnter	menuIndex="2"><set duration=".0001"><animate type="alpha" to="0"/></set></onMenuEnter>
		</item>

		<item xOffset="192" alpha="0"/>
	</menu>
	<reloadableImage monitor="1" type="logo" alpha="0" x="center" y="center" xOrigin="center" yOrigin="center" height="648" maxWidth="1152" layer="3">
		<onMenuEnter		><set duration=".0001"><animate type="alpha" to="0"/></set></onMenuEnter>
		<onMenuScroll		><set duration=".0001"><animate type="alpha" to="0"/></set></onMenuScroll>
		
		<onMenuIdle>
			<set duration="1.2">
				<animate type="maxWidth" to="1210"/>
				<animate type="height" to="680"/>
				<animate type="alpha" to="0"/>
			</set>
			<set duration=".3"><animate type="nop"/></set>
			<set duration="0.001">
				<animate type="maxWidth" to="1152"/>
				<animate type="height" to="648"/>
				<animate type="alpha" to=".6"/>
			</set>
		</onMenuIdle>
	</reloadableImage>

</layout>
