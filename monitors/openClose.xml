<?xml version="1.0" encoding="UTF-8"?>
<!-- PHOENIX by RFSVIEIRA -->
<layout>
<!-- Open/Close -->

	<image monitor="1" src="images\openClose\TopLeft.png" x="left" y="top" xOrigin="left" yOrigin="top" layer="11">
	    <onEnter>
		    <set duration=".5">
			    <animate type="yOrigin" to="bottom"/>
			</set>
		</onEnter>
		<onMenuEnter menuIndex="0">
		    <set duration=".00001">
			    <animate type="alpha" to="1"/>
			</set>
		    <set duration=".5">
			    <animate type="yOrigin" to="bottom"/>
			</set>
		</onMenuEnter>
		<onExit>
		    <set duration=".3">
			    <animate type="yOrigin" to="top"/>
			</set>
		</onExit>
	</image>
